---
import { FaGithub, FaLinkedin, FaInstagram, FaDiscord } from "react-icons/fa6";
---

<div class="flex gap-12">
  <a
    href="https://github.com/josetano2"
    class="transition-all duration-300 hover:scale-110"
  >
    <FaGithub
      data-cursor-text="Github"
      className="cursor-pointer text-slate-700 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white transition-colors"
      size={30}
    />
  </a>
  <a
    href="https://www.linkedin.com/in/jose-jonathan-tano"
    class="transition-all duration-300 hover:scale-110"
  >
    <FaLinkedin
      data-cursor-text="LinkedIn"
      className="cursor-pointer text-slate-700 dark:text-slate-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
      size={30}
    />
  </a>
  <a
    href="https://www.instagram.com/josetano2/"
    class="transition-all duration-300 hover:scale-110"
  >
    <FaInstagram
      data-cursor-text="Instagram"
      className="cursor-pointer text-slate-700 dark:text-slate-300 hover:text-pink-600 dark:hover:text-pink-400 transition-colors"
      size={30}
    />
  </a>
</div>
