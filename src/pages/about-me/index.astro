---
import Layout from "../../layouts/Layout.astro";
import me from "../../lib/images/AboutMe/me.jpg";
import {
  myself,
  experiences,
  achievements,
} from "@/lib/contents/project-contents";
import { Image } from "astro:assets";
import Footer from "@/components/astro/Footer.astro";
---

<Layout>
  <div
    class="flex flex-col w-full min-h-screen items-center justify-center about-page"
  >
    <div
      class="max-w-6xl w-full px-6 md:px-8 lg:px-12 py-8 md:py-12 space-y-10 md:space-y-12"
    >
      <div
        class="flex flex-col lg:flex-row gap-6 lg:gap-10 items-center lg:items-center"
      >
        <div class="flex-shrink-0">
          <div class="relative">
            <div
              class="absolute inset-0 blur-3xl opacity-60 scale-95 rounded-2xl overflow-hidden"
            >
              <Image
                class="object-cover w-full h-full"
                src={me}
                alt="Glow effect"
              />
            </div>
            <div
              class="relative w-80 h-80 md:w-96 md:h-96 lg:w-[28rem] lg:h-[32rem] rounded-2xl overflow-hidden shadow-lg group"
              data-cursor-text="Hello"
            >
              <Image
                class="object-cover w-full h-full transition-transform duration-500 group-hover:scale-105"
                src={me}
                alt="Jose Jonathan Tano"
              />
            </div>
          </div>
        </div>

        <div class="flex-1 space-y-4">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-semibold tracking-tight"
          >
            About Me
          </h1>
          <p
            class="text-lg md:text-xl leading-relaxed text-slate-700 text-justify"
          >
            {myself}
          </p>
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-6 md:gap-10">
        <div class="space-y-4">
          <h2 class="text-3xl md:text-4xl font-semibold">Achievements</h2>
          <div class="space-y-3">
            {
              achievements.map((achievement) => (
                <div class="flex justify-between items-start gap-4 py-2 border-b border-slate-100 last:border-0">
                  <p class="text-base md:text-lg text-slate-700 flex-1">
                    {achievement.name}
                  </p>
                  <span class="text-sm md:text-base text-slate-500 font-medium whitespace-nowrap">
                    {achievement.year}
                  </span>
                </div>
              ))
            }
          </div>
        </div>

        <!-- Experience -->
        <div class="space-y-4">
          <h2 class="text-3xl md:text-4xl font-semibold">Experience</h2>
          <div class="space-y-3">
            {
              experiences.map((experience) => (
                <div class="flex justify-between items-start gap-4 py-2 border-b border-slate-100 last:border-0">
                  <p class="text-base md:text-lg text-slate-700 flex-1">
                    {experience.name}
                  </p>
                  <span class="text-sm md:text-base text-slate-500 font-medium whitespace-nowrap">
                    {experience.year}
                  </span>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
    <Footer />
  </div>
</Layout>

<script>
  import gsap from "gsap";

  gsap.from(".about-page > div > div", {
    y: 80,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: "power2.inOut",
  });
</script>
