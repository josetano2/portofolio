---
import Layout from "@/layouts/Layout.astro";
import * as Contents from "@/lib/contents/homeTexts";
import { FaGithub, FaLinkedin, FaInstagram, FaDiscord } from "react-icons/fa6";
import Button from "../components/Button";
import TypewriterText from "@/components/TypewriterText";
---

<Layout>
  <div class="flex flex-col justify-center h-full p-12 overflow-hidden">
    <div class="flex flex-col justify-center items-center gap-8 split">
      <div class="flex">
        <p class="text-4xl font-mono">{`>\xa0`}</p>
        <TypewriterText client:load />
        <p class="text-4xl font-mono">{`, I'm Jose`}</p>
      </div>

      <div class="flex gap-12">
        <FaGithub data-cursor-text=" " className="cursor-pointer" size={30} />
        <FaLinkedin data-cursor-text=" " className="cursor-pointer" size={30} />
        <FaInstagram
          data-cursor-text=" "
          className="cursor-pointer"
          size={30}
        />
        <FaDiscord data-cursor-text=" " className="cursor-pointer" size={30} />
      </div>
      <div class="flex justify-center items-center gap-12 text-lg">
        <Button client:idle href="/" text="View CV" id="button-cv" />
        <Button
          client:idle
          href="/projects"
          text="Projects"
          id="button-projects"
        />
      </div>
    </div>
  </div>

  <style is:global>
    .text {
      transform: translateY(20px);
    }

    .split {
      /* clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%); */
      transform: translateY(60px);
      opacity: 0;
    }

    .char1,
    .char2 {
      /* opacity: 0; */
      transform: translateY(5.5rem);
      transition: transform 0.5s;
    }
  </style>
  <script>
    import { animatePageOut } from "@/lib/animation/animation";
    import gsap from "gsap";

    gsap.to(".char1", {
      y: 0,
      stagger: 0.05,
      duration: 0.1,
      ease: "expo.inOut",
    });

    gsap.to(".char2", {
      y: 0,
      stagger: 0.05,
      duration: 0.1,
      ease: "expo.inOut",
    });
    gsap.to(".split", {
      y: 0,
      duration: 1,
      opacity: 1,
      ease: "expo.inOut",
    });

    const handleChangePage = (path: string) => {
      animatePageOut(path);
    };
  </script>
</Layout>
