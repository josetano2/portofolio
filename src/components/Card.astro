---
import { Image } from "astro:assets";
import type { IProject, IStack } from "../lib/models/model";

interface Props {
  id: string;
  name: string;
  role: string;
  stacks: IStack[];
  thumbnail: ImageMetadata;
}

const { id, name, role, stacks, thumbnail } = Astro.props;
---

<div
  class="w-full h-fit gap-2 font-mono cursor-pointer border-2 border-black p-3 bg-white group"
  data-cursor-text={name}
>
  <div class="w-full h-72 overflow-hidden relative">
    <div
      class="w-screen h-full bg-black absolute z-20 opacity-10 group-hover:opacity-0 transition-opacity ease-in"
    >
    </div>
    <Image
      class="object-cover w-full h-full transition-transform ease-in duration-[0.15s] scale-[1] group-hover:scale-[1.05]"
      src={thumbnail}
      alt="tes"
    />
  </div>
  <div class="pt-6">
    <div class="flex justify-between w-full">
      <p class="text-2xl font-bold">{name}</p>
      <div class="flex gap-3">
        {
          stacks.map((s) => {
            return <s.icon size={25} />;
          })
        }
      </div>
    </div>
    <p class="text-lg">{role}</p>
  </div>
</div>
