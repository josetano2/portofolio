---
import Card from "@/components/astro/Card.astro";
import Layout from "../../layouts/Layout.astro";
import { projectContents } from "@/lib/contents/project-contents";
import Footer from "@/components/astro/Footer.astro";
---

<Layout>
  <div class="flex flex-col items-center pt-4 lg:pt-0">
    <div class="flex flex-col h-full sm:p-4 lg:p-8 gap-6">
      <p class="text-2xl lg:text-3xl 2xl:text-4xl font-bold reveal text-slate-900 dark:text-white">
        {`> My Projects`}
      </p>
      <div
        class="grid pb-12 gap-6 sm:grid-cols-1 lg:grid-cols-2 xl:grid-cols-2 2xl:grid-cols-3"
      >
        {
          Object.entries(projectContents).map(([projectName, project]) => {
            return (
              <div class="cards">
                <Card
                  key={projectName}
                  name={project.name}
                  stacks={project.stacks}
                  description={project.description}
                  thumbnail={project.thumbnail}
                />
              </div>
            );
          })
        }
      </div>
    </div>
    <Footer />
  </div>
</Layout>

<script>
  import gsap from "gsap";

  gsap.fromTo(
    ".reveal",
    {
      y: 20,
      ease: "power1.in",
      opacity: 0,
    },
    {
      y: 0,
      duration: 0.4,
      opacity: 1,
      ease: "power1.in",
    }
  );
  gsap.fromTo(
    ".cards",
    {
      y: 20,
      ease: "power1.in",
      opacity: 0,
    },
    {
      y: 0,
      duration: 0.4,
      stagger: 0.2,
      opacity: 1,
      ease: "power1.in",
    }
  );
</script>
